/* pages/postDetails/postDetails.wxss */
.head-image {
  width: 100%;
  height: 440rpx;
}
.title {
  width: 100%;
  padding: 0 30rpx;
  box-sizing: border-box;
  font-size: 50rpx;
  font-weight: bold;
  margin-top: 30rpx;
  margin-bottom: 20rpx;
  color: #333;
}

.desc{
  display: flex;
  margin: 0 30rpx;
  padding: 12rpx 0;
  box-sizing: border-box;
  flex-direction: row;
  justify-content: space-between;
  border-bottom: 2rpx solid #eee;
}
.desc-title text{
  position: relative;
  top: -3rpx;
  margin-left: 18rpx;
  width: 160rpx;
  color: #555;
  font-size: 32rpx;
}
.desc-title image{
  position: relative;
  top: 5rpx;
  display: inline-block;
  width: 40rpx;
  height: 40rpx;
}
.desc-content{
  position: relative;
  top: 3rpx;
  width: 65%;
  text-align: right;
  color: #333;
  font-size: 32rpx;
}

.detail-title{
  color: #555;
  margin: 25rpx 0 15rpx 30rpx;
}
.detail-txt{
  color: #888;
  margin: 0 30rpx;
  margin-bottom: 50rpx;
  line-height: 46rpx;
}
.bottom{
  margin-bottom: 160rpx !important;
}

.add-post{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  font-size: 40rpx;
  color: #fff;
  text-align: center;
  letter-spacing: 2rpx;
  padding: 22rpx 0;
  background-color: #C80405;
}