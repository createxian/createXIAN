/* pages/create/create.wxss */
.container{
  padding: 35rpx 30rpx;
}
.upload-img{
  position: relative;
  margin-bottom: 15rpx;
  height: 360rpx;
  border-radius: 10rpx;
}
.header{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
  background-color: #efefef;
}
.img{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 360rpx;
  border-radius: 10rpx;
}
.title1{
  position: absolute;
  width: 100%;
  text-align: center;
  color: #cfcfcf;
  letter-spacing: 4rpx;
  margin-top: 130rpx;
  font-size: 32rpx;
  font-weight: bold;
}
.title2{
  position: absolute;
  width: 100%;
  text-align: center;
  color: #ccc;
  margin-top: 186rpx;
  font-size: 28rpx;
}
.wrapper{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  width: 100%;
  font-size: 34rpx;
  color: #555;
  padding: 22rpx 0;
  box-sizing: border-box;
  border-bottom: 2rpx solid #eee;
}
.ph-class{
  color: #aaa;
}
.label{
  color: #333;
}
#pname,#paddr,#phost,#pdesc,.pdesc{
  vertical-align: text-bottom;
  color: #aaa;
  text-align: right;
  width: 500rpx;
  font-size: 32rpx;
  margin-top: 2rpx;
  z-index: 5;
}
.picker-txt{
  color: #999;

}
.desc-wrapper{
  margin-bottom: 100rpx; 
}
.add-post{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  font-size: 40rpx;
  color: #fff;
  text-align: center;
  letter-spacing: 2rpx;
  padding: 22rpx 0;
  background-color: #C80405;
  z-index: 9999;
}
.delete{
  position: absolute;
  right: 5rpx;
  top: 5rpx;
  width: 65rpx;
  height: 65rpx;
  z-index: 10;
}